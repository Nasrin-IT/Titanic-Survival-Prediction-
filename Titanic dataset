import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
df = pd.read_csv("titanic.csv")
df = df.dropna(subset=['Name', 'Survived', 'Sex'])
plt.figure(figsize=(6, 4))
sns.countplot(x='Sex', hue='Survived', data=df, palette='pastel')
plt.title('Survival Count by Gender')
plt.xlabel('Gender')
plt.ylabel('Count')
plt.legend(title='Survived', labels=['No (0)', 'Yes (1)'])
plt.tight_layout()
plt.show()
search_name = input("ğŸ” Enter passenger name (or part of it): ").strip().lower()
matched= df[df['Name'].str.lower().str.contains(search_name)]
if not matched.empty:
    for idx,row in matched.iterrows():
        name = row['Name']
        survived = "ğŸŸ¢ Survived" if row['Survived'] == 1 else "ğŸ”´ Did Not Survive"
     print(f"Passenger:     {name} â†’ {survived}")
else:
    print("âŒ No matching passenger found.")
